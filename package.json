  "type": "module",
  "scripts": {
    "start": "node --env-file=.env dist/bin/www.js",
    "prestart": "node -e \"if (!require('fs').existsSync('dist/bin/www.js')) process.exit(1)\" || npm run -s build",
    "build": "gulp build",
    "prebuild": "npm run lint -s && { echo \"\n\"; npm run format -s; }",
    "watch": "gulp watchSrc",
    "lint": "eslint --fix \"**/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx}\" && echo \"\\033[32mNo Lint Errors\\033[0m\"",
    "format": "echo \"Files formatted:\"; prettier -w **/* -l && echo \"\n\\033[32mFormatting Complete\\033[0m\""
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
